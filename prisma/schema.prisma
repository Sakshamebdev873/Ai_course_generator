generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  salt      String
  hash      String
  createdAt DateTime @default(now())
  courses   Course[]
}

model Course {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  topic      String
  weeks      Int
  difficulty String
  content    Json
  createdAt  DateTime @default(now())
}
model BlacklistedToken {
  id        String   @id @default(uuid())
  jti       String   @unique   // JWT ID
  token     String   // (optional: store full token)
  expiresAt DateTime // When token would naturally expire
  createdAt DateTime @default(now())
}
