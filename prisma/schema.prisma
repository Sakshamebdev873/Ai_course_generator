generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  salt      String
  hash      String
  createdAt DateTime @default(now())
  courses   Course[]
}

model Course {
  id          Int      @id @default(autoincrement())
  topic       String
  difficulty  String
  weeks       Int
  description String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  weeksData   Week[]  
  createdAt   DateTime @default(now())
}

model Week {
  id          Int      @id @default(autoincrement())
  weekNumber  Int
  topic       String
  description String
  exercise    String
  isCompleted Boolean  @default(false)
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId    Int
}
model BlacklistedToken {
  id        String   @id @default(uuid())
  jti       String   @unique   // JWT ID
  token     String   // (optional: store full token)
  expiresAt DateTime // When token would naturally expire
  createdAt DateTime @default(now())
}
